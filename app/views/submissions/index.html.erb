
<h3>
  <div class="pull-right">
    <p>
      <%= link_to 'New Submission', new_submission_path, {:class => "btn"} %>
    </p>
  </div>
  Your Submissions
</h3>


<table class="table">
  <tr>
    <th>Assignment</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.assignment.name %></td>
    <td><%= submission.body %></td>
    <td><%= link_to 'Show', submission %></td>
    <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
    <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

