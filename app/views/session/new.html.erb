<h3>Sign In</h3>

<%= form_tag(session_path, :method => :post) do %>
<div class="field">
  <%= label_tag :email %>
  <%= text_field_tag :email %>
</div>
<div class="field">
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</div>
<div class="actions">
  <input type="submit" class="btn" name="submit" value="Log In" id="submit">
</div>
  
<% end %>
